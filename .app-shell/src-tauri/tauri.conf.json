{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MOSAIC",
  "version": "0.1.0",
  "identifier": "com.mosaic.dev",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../../src/GUI"
  },
  "app": {
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "MOSAIC",
        "width": 800,
        "height": 600,
        "resizable": false,
        "transparent": true,
        "decorations": true, 
        "hiddenTitle": true,
        "titleBarStyle": "Overlay",
        "maximizable": false
      }
    ],
    "security": {
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:path:default",
            "core:event:default",
            "core:window:default",
            "core:window:allow-start-dragging",
            "dialog:allow-open",
            "dialog:allow-save",
            "fs:allow-mkdir",
            "fs:allow-write-file",
              {
                "identifier": "fs:scope",
                "allow": [{ "path": "$HOME/**" }] 
              }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
    "icons/32x32.png",
    "icons/128x128.png",
    "icons/128x128@2x.png",
    "icons/icon.icns",
    "icons/icon.ico"
    ]
  }
}